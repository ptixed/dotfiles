set $mod Mod4
set $alt Mod1

# https://github.com/ryanoasis/nerd-fonts/tree/master/patched-fonts/CascadiaCode
font pango:CaskaydiaMono Nerd Font 

floating_modifier $mod

bindsym $mod+f floating toggle

bindsym $alt+F4 kill

bindsym $mod+braceleft move workspace to output left
bindsym $mod+braceright move workspace to output right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+Return fullscreen toggle

set $ws1 "1:1"
set $ws2 "2:2"
set $ws3 "3:3"
set $ws4 "4:4"
set $ws5 "5:5"
set $ws6 "6:6"
set $ws7 "7:7"
set $ws8 "8:8"
set $ws9 "9:9"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

bindsym $mod+w focus up
bindsym $mod+s focus down
bindsym $mod+a focus left
bindsym $mod+d focus right
bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right

bindsym $mod+$alt+1 move container to workspace $ws1
bindsym $mod+$alt+2 move container to workspace $ws2
bindsym $mod+$alt+3 move container to workspace $ws3
bindsym $mod+$alt+4 move container to workspace $ws4
bindsym $mod+$alt+5 move container to workspace $ws5
bindsym $mod+$alt+6 move container to workspace $ws6
bindsym $mod+$alt+7 move container to workspace $ws7
bindsym $mod+$alt+8 move container to workspace $ws8
bindsym $mod+$alt+9 move container to workspace $ws9

bindsym $mod+$alt+w move up
bindsym $mod+$alt+s move down
bindsym $mod+$alt+a move left
bindsym $mod+$alt+d move right
bindsym $mod+$alt+Up move up
bindsym $mod+$alt+Down move down
bindsym $mod+$alt+Left move left
bindsym $mod+$alt+Right move right

# bindsym $mod+Tab workspace back_and_forth
bindsym $mod+Tab exec --no-startup-id ilia -p windows
bindsym $alt+Tab exec --no-startup-id kill -HUP $(cat /tmp/i3-bar/pid)

workspace_auto_back_and_forth yes

focus_follows_mouse no
mouse_warping none
popup_during_fullscreen smart

for_window [class="^.*"] border pixel 0

smart_gaps on
gaps inner 10px
# gaps top -10px

bindsym $mod+r restart
bindsym $mod+l exec --no-startup-id i3lock-fancy-rapid 5 3

exec --no-startup-id ~/.config/i3/autostart.fish
exec_always --no-startup-id autorandr --change 
exec_always --no-startup-id nitrogen --restore

bindsym XF86AudioRaiseVolume exec --no-startup-id fish ~/.config/i3/input.fish key XF86AudioRaiseVolume 
bindsym XF86AudioLowerVolume exec --no-startup-id fish ~/.config/i3/input.fish key XF86AudioLowerVolume 
bindsym XF86MonBrightnessDown exec --no-startup-id fish ~/.config/i3/input.fish key XF86MonBrightnessDown 
bindsym XF86MonBrightnessUp exec --no-startup-id fish ~/.config/i3/input.fish key XF86MonBrightnessUp 
bindsym XF86AudioPlay exec --no-startup-id fish ~/.config/i3/input.fish key XF86AudioPlay 
bindsym XF86AudioNext exec --no-startup-id fish ~/.config/i3/input.fish key XF86AudioNext 
bindsym XF86AudioPrev exec --no-startup-id fish ~/.config/i3/input.fish key XF86AudioPrev 
bindsym XF86AudioMute exec --no-startup-id fish ~/.config/i3/input.fish key XF86AudioMute 
bindsym $mod+BackSpace exec --no-startup-id fish ~/.config/i3/input.fish key Super+BackSpace

bindsym Print exec --no-startup-id flameshot gui
bindsym $mod+b exec --no-startup-id google-chrome --password-store=gnome-libsecret 
bindsym $mod+t exec --no-startup-id st -f "CaskaydiaMono Nerd Font:size=11" tmux
bindsym $mod+space exec --no-startup-id ilia -t ~/.config/i3/ilia.css -p apps

for_window [class="xfreerdp"] floating disable

bar {
    i3bar_command i3bar --transparency
    position top
    mode dock
    separator_symbol " Â· "
    # status_command ~/.config/i3/bar.sh
    status_command fish -c ~/.config/i3/bar.fish
    strip_workspace_numbers yes
    workspace_min_width 36
    padding 6px 6px 0px 6px
    tray_output none

    colors {
        background #000000cc
        statusline #ffffffaa
        separator  #ffffffaa

        #                  border    background text
        focused_workspace  #000000cc #000000cc #ed9f34ff
        active_workspace   #000000cc #000000cc #ffffffff
        inactive_workspace #000000cc #000000cc #888888ff
        urgent_workspace   #000000cc #000000cc #d9581cff
        binding_mode       #00000ccc #000000cc #d9581cff
    }
}
