floating_modifier $mod

bindsym $mod+f floating toggle

bindsym $alt+F4 kill

bindsym $mod+w focus up
bindsym $mod+s focus down
bindsym $mod+a focus left
bindsym $mod+d focus right

bindsym $mod+Shift+w move up
bindsym $mod+Shift+s move down
bindsym $mod+Shift+a move left
bindsym $mod+Shift+d move right

bindsym $mod+braceleft move workspace to output left
bindsym $mod+braceright move workspace to output right

bindsym $mod+h split h
bindsym $mod+v split v

bindsym $mod+Return fullscreen toggle

set $ws1 "1:<big></big>"
set $ws2 "2:<big></big>"
set $ws3 "3:3"
set $ws4 "4:4"
set $ws5 "5:5"
set $ws6 "6:6"
set $ws7 "7:7"
set $ws8 "8:8"
set $ws9 "9:<big>󰢹</big>"

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

bindsym $mod+$alt+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+$alt+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+$alt+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+$alt+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+$alt+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+$alt+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+$alt+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+$alt+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+$alt+9 move container to workspace $ws9; workspace $ws9

focus_follows_mouse no
mouse_warping none
popup_during_fullscreen smart
workspace_auto_back_and_forth yes

for_window [class="^.*"] border pixel 0

smart_gaps on
gaps inner 10px
gaps top -10px

bindsym $mod+r restart
bindsym $mod+l exec --no-startup-id i3lock-fancy-rapid 5 3

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-fancy-rapid 5 3
exec --no-startup-id picom -b
exec --no-startup-id nitrogen --restore
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1
exec_always --no-startup-id autorandr --change

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && kill -USR1 $(cat /tmp/i3-bar/pid)
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && kill -USR1 $(cat /tmp/i3-bar/pid)

bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -q set 20%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 20%+

bindsym Print exec flameshot gui
bindsym $mod+b exec --no-startup-id google-chrome --password-store=gnome-libsecret 
bindsym $mod+t exec --no-startup-id GLFW_IM_MODULE=ibus kitty fish
bindsym $mod+space exec --no-startup-id ilia -t ~/.config/i3/ilia.css -p apps

# ibus-setup: <super>+backspace = input method switch

for_window [title="Proton VPN"] floating enable
for_window [title="Remmina"] floating enable
assign [title="Remmina"] $ws9

bar {
    i3bar_command i3bar --transparency
    position top
    mode dock
    separator_symbol " · "
    status_command ~/.config/i3/bar.sh
    strip_workspace_numbers yes
    workspace_min_width 36
    padding 6px 6px 0px 6px
    tray_output none

    colors {
        background #00000000
        statusline #ffffffaa
        separator  #ffffffaa

        #                  border    background text
        focused_workspace  #00000000 #00000000 #ed9f34ff
        active_workspace   #00000000 #00000000 #ffffffff
        inactive_workspace #00000000 #00000000 #ffffff88
        urgent_workspace   #00000000 #00000000 #d9581cff
    }
}
