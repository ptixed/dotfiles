
altscreen on
autodetach on
defscrollback 10000
defutf8 on
startup_message off
hardstatus ignore
vbell off
maptimeout 5
caption string "%?%F%{.R.}%?%3n"

bind j focus down
bind k focus up
bind h focus left
bind l focus right
bind ^a focus next

screen 0 bash
screen 1 bash

layout new L
select 0
split -v
focus right
select 1
focus left

